<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head",{pageTitle}); -%>
    <script defer src="/js/checkout.js"></script>

    <title>Frontend Mentor | Audiophile e-commerce website</title>
  </head>

  <body>
    <header id="header-checkout-page">
      <div class="container">
        <!-- NAVIGATION -->
        <%- include("partials/navigation"); -%>
      </div>

      <!-- CART  -->
      <%- include("partials/cart"); -%>
    </header>

    <main class="main">
      <div class="container">
        <div class="back-button-wrapper">
          <a class="back-button" href="..">go back</a>
        </div>
        <form data-form class="checkout-form">
          <section class="form">
            <h1>Checkout</h1>
            <div class="form-input">
              <section class="form-details">
                <h3>Billing Details</h3>

                <div class="form-details-input">
                  <div class="form-details-input_2-col">
                    <div class="form-group">
                      <div class="label">
                        <label for="name">Name</label>
                        <span data-name-error-message></span>
                      </div>

                      <input
                        type="text"
                        name="name"
                        id="name"
                        placeholder="Alexei Ward"
                      />
                    </div>
                    <div class="form-group">
                      <div class="label">
                        <label for="email">Email Adress</label>
                        <span data-email-error-message></span>
                      </div>

                      <input
                        type="email"
                        name="email"
                        id="email"
                        placeholder="alexei@mail.com"
                      />
                    </div>
                  </div>

                  <div class="form-details-input_2-col">
                    <div class="form-group">
                      <div class="label">
                        <label for="phone">Phone Number</label>
                        <span data-phone-error-message></span>
                      </div>

                      <input
                        type="number"
                        name="phone"
                        id="phone"
                        placeholder="+1 202-555-0136"
                      />
                    </div>
                  </div>
                </div>
              </section>
              <section class="form-details">
                <h3>Shipping info</h3>

                <div class="form-details-input">
                  <div class="form-group">
                    <div class="label">
                      <label for="address">Address</label>
                      <span data-address-error-message></span>
                    </div>
                    <input
                      type="text"
                      name="address"
                      id="address"
                      placeholder="1137 Williams Avenue"
                    />
                  </div>
                  <div class="form-details-input_2-col">
                    <div class="form-group">
                      <div class="label">
                        <label for="zip_code">ZIP code</label>
                        <span data-zip_code-error-message></span>
                      </div>
                      <input
                        type="number"
                        name="zip_code"
                        id="zip_code"
                        placeholder="10001"
                      />
                    </div>
                    <div class="form-group">
                      <div class="label">
                        <label for="city">City</label>
                        <span data-city-error-message></span>
                      </div>
                      <input
                        type="text"
                        name="city"
                        id="city"
                        placeholder="New York"
                      />
                    </div>
                  </div>
                  <div class="form-details-input_2-col">
                    <div class="form-group">
                      <div class="label">
                        <label for="country">Country</label>
                        <span data-country-error-message></span>
                      </div>
                      <input
                        type="text"
                        name="country"
                        id="country"
                        placeholder="United States"
                      />
                    </div>
                  </div>
                </div>
              </section>
              <section class="form-details">
                <h3>Payment Details</h3>
                <div class="form-details-input">
                  <div class="form-details-input_2-col">
                    <div class="label-aside">Payment Method</div>
                    <fieldset data-payment-method>
                      <label for="e-money" class="l">
                        <input
                          type="radio"
                          value="e-money"
                          name="paymentMethod"
                          id="e-money"
                          checked
                        />
                        e-Money</label
                      >
                      <label for="cash" class="l">
                        <input
                          type="radio"
                          value="cash"
                          name="paymentMethod"
                          id="cash"
                        />
                        Cash on Delivery</label
                      >
                    </fieldset>
                  </div>
                  <div data-e-money class="form-details-input_2-col">
                    <div class="form-group">
                      <div class="label">
                        <label for="eMoneyNumber">e-Money Number</label>
                        <span data-eMoneyNumber-error-message></span>
                      </div>
                      <input
                        type="number"
                        name="eMoneyNumber"
                        id="eMoneyNumber"
                        placeholder="238521993"
                      />
                    </div>
                    <div class="form-group">
                      <div class="label">
                        <label for="eMoneyPin">e-Money PIN</label>
                        <span data-eMoneyPin-error-message></span>
                      </div>
                      <input
                        type="number"
                        name="eMoneyPin"
                        id="eMoneyPin"
                        placeholder="6891"
                      />
                    </div>
                  </div>
                </div>

                <div
                  data-cash-summary
                  class="cash-summary"
                  style="display: none"
                >
                  <div>
                    <svg
                      width="48"
                      height="48"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        d="M46.594 8.438H42.28c-.448 0-.869.213-1.134.574l-2.694 3.674a1.15 1.15 0 1 1-1.848-1.37c2.568-3.53 2.864-3.545 2.864-4.285 0-.779-.636-1.406-1.407-1.406h-5.404a17.658 17.658 0 0 1 9.606-2.813h4.33a1.406 1.406 0 0 0 0-2.812h-4.33c-5.277 0-10.33 2.02-14.142 5.625h-8.34c-.777 0-1.407.63-1.407 1.406v9.938H9.844c-.777 0-1.406.63-1.406 1.406v15.6a14.053 14.053 0 0 0-7.824 3.089 1.406 1.406 0 1 0 1.772 2.185 11.226 11.226 0 0 1 7.048-2.499h3.129c.775 0 1.406.63 1.406 1.406 0 .776-.631 1.407-1.406 1.407H8.436a1.406 1.406 0 0 0 0 2.812h13.728a4.226 4.226 0 0 1-3.977 2.813H1.405a1.406 1.406 0 0 0 0 2.812h16.782c3.395 0 6.236-2.42 6.89-5.625h7.36c.776 0 1.406-.63 1.406-1.406V25.312h9.843c.777 0 1.407-.63 1.407-1.406V11.25h1.5a1.406 1.406 0 0 0 0-2.813ZM33.61 17.599a1.404 1.404 0 0 0-1.172-.63h-3.085c-1.084-1.834.241-4.172 2.381-4.172 2.531 0 3.708 3.115 1.876 4.802ZM21.188 8.437h14.06c-.744 1.03-1.057 1.305-1.352 1.983-4.216-1.779-8.726 2.057-7.559 6.549h-5.15V8.437ZM19.78 19.782h2.813v5.625H19.78v-5.625Zm11.25 19.782h-14.49c.969-2.735-1.07-5.626-3.979-5.626H11.25V19.782h5.719v7.032c0 .776.63 1.406 1.406 1.406H24c.777 0 1.406-.63 1.406-1.407v-7.03h5.625v19.78ZM33.844 22.5v-1.771a5.56 5.56 0 0 0 3.453-4.769 3.954 3.954 0 0 0 3.424-1.611l1.56-2.127V22.5h-8.437Z"
                        fill="#D87D4A"
                      />
                    </svg>
                  </div>
                  <p>
                    The ‘Cash on Delivery’ option enables you to pay in cash
                    when our delivery courier arrives at your residence. Just
                    make sure your address is correct so that your order will
                    not be cancelled.
                  </p>
                </div>
              </section>
            </div>
          </section>
          <section class="summary">
            <div class="content">
              <div class="header">
                <h2>Summary</h2>
              </div>
              <div class="body">
                <ul data-checkout-list>
                  <!--
                  <li>
                    <img
                      src="./assets/product-xx99-mark-two-headphones/mobile/image-product.jpg"
                      alt="XX99 Mark II Headphones"
                    />
                    <div class="checkout-item-info">
                      <h4>Mark II</h4>
                      <span>5</span>
                    </div>
                    <div class="checkout-item-qty">x3</div>
                  </li>
                  -->

                  <!-- <span>Your cart is empty!</span> -->
                </ul>
              </div>
              <div class="footer">
                <ul>
                  <li>
                    <span>Total</span>
                    <span data-checkout-total-price>&dollar;0</span>
                  </li>
                  <li>
                    <span>shipping</span>
                    <span data-shipping-charge>&dollar;0</span>
                  </li>
                  <li>
                    <span>vat (included)</span>
                    <span data-vat>&dollar;0</span>
                  </li>

                  <li>
                    <span>total grand</span>
                    <span data-grand-total>&dollar;0</span>
                  </li>
                </ul>

                <button type="submit">CONTINUE & PAY</button>
              </div>
            </div>
          </section>
        </form>
      </div>
    </main>

    <!-- FOOTER -->
    <%- include("partials/footer"); -%>

    <dialog data-modal id="order-complete-status">
      <svg width="64" height="64" xmlns="http://www.w3.org/2000/svg">
        <g fill="none" fill-rule="evenodd">
          <circle fill="#D87D4A" cx="32" cy="32" r="32" />
          <path
            stroke="#FFF"
            stroke-width="4"
            d="m20.754 33.333 6.751 6.751 15.804-15.803"
          />
        </g>
      </svg>
      <h2>thank you<br />for your order</h2>
      <p>You will receive an email confirmation shortly.</p>
